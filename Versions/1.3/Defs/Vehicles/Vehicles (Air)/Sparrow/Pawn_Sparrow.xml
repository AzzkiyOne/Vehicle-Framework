<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleDef ParentName="BaseVehiclePawn">
		<defName>Sparrow</defName>
		<label>Sparrow</label>
		<description>An agile fighter plane capable of recon and offensive operations.</description>
		
		<uiIconScale>0.9</uiIconScale>
		<graphicData>
			<texPath>Vehicles/Air/Sparrow/Sparrow</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<drawSize>(5,5)</drawSize>
			<drawOffset>(0, 0, -0.25)</drawOffset>
			<shaderType>Cutout</shaderType>
			<shadowData>
				<volume>(0.4,0.1,0.4)</volume>
			</shadowData>
		</graphicData>
		
		<combatPower>2000</combatPower>
		<fillPercent>1</fillPercent>
		
		<nameable>true</nameable>
		<buildDef>Sparrow_Blueprint</buildDef>

		<canCaravan>false</canCaravan>
		
		<size>(3,3)</size>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Combat</vehicleCategory>
		<techLevel>Industrial</techLevel>
		<vehicleType>Air</vehicleType>
				
		<statBases>
			<Mass>6200</Mass>
			<ArmorRating_Blunt>1.0</ArmorRating_Blunt>
			<ArmorRating_Sharp>1.0</ArmorRating_Sharp>
			<MarketValue>175000</MarketValue>
			<Flammability>0</Flammability>
		</statBases>
		
		<vehicleStats>
			<MoveSpeed>0.5</MoveSpeed>
			<CargoCapacity>250</CargoCapacity>
			<RepairRate>1.75</RepairRate>
		</vehicleStats>
		
		<drawProperties>
			<displayOffset>(0, 0.1)</displayOffset>
		</drawProperties>
		
		<properties>
			<healthLabel_Healthy>Operational</healthLabel_Healthy>
			<healthLabel_Injured>Needs Repairs</healthLabel_Injured>
			<healthLabel_Immobile>Inoperable</healthLabel_Immobile>
			
			<customBiomeCosts>
				<li>
					<key>AridShrubland</key>
					<value>5</value>
				</li>
			</customBiomeCosts>
			
			<roles>
				<li>
					<key>commander</key>
					<label>Commander</label>
					<handlingTypes>
						<li>Movement</li>
					</handlingTypes>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
				</li>
			</roles>
			
			<customTerrainCosts DisallowTerrainWithTag="Water">
				<li>
					<key>Mud</key>
					<value>-1</value>
				</li>
			</customTerrainCosts>
		</properties>
		
		<components>
			<li>
				<key>Hull</key>
				<label>Hull</label>
				<health>150</health>
				<armor>1.65</armor>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
				
				<categories>
					<li>BodyIntegrity</li>
				</categories>
			</li>
			<li>
				<key>LeftWing</key>
				<label>Left Wing</label>
				<health>50</health>
				<armor>0.75</armor>
				<efficiencyWeight>10</efficiencyWeight>
				
				<categories>
					<li>FlightControl</li>
				</categories>
				
				<hitbox>
					<cells>
						<li>(-1,0)</li>
						<li>(-1,-1)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<key>RightWing</key>
				<label>Right Wing</label>
				<health>50</health>
				<armor>0.75</armor>
				<efficiencyWeight>10</efficiencyWeight>
				
				<categories>
					<li>FlightControl</li>
				</categories>
				
				<hitbox>
					<cells>
						<li>(1,0)</li>
						<li>(1,-1)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				<armor>0.1</armor>
				<efficiencyWeight>10</efficiencyWeight>
				
				<categories>
					<li>MoveSpeed</li>
					<li>FlightSpeed</li>
				</categories>
				
				<explosionProperties>
					<chance>0.25</chance>
					<radius>6</radius>
					<damageDef>Bomb</damageDef>
				</explosionProperties>
				
				<hitbox>
					<cells>
						<li>(0,-1)</li>
					</cells>
				</hitbox>
			</li>
		</components>
		
		<race>
			<thinkTreeMain>Vehicle</thinkTreeMain>
			<intelligence>ToolUser</intelligence>
			<fleshType>MetalVehicle</fleshType>
			<needsRest>false</needsRest>
			<hasGenders>false</hasGenders>
			<foodType>None</foodType>

			<baseBodySize>1.0</baseBodySize>
			<baseHealthScale>1.0</baseHealthScale>
			
			<soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeMiss>
		</race>

		<comps>	
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Uranium</fuelType> <!-- Must Include -->
				<fuelConsumptionRate>200</fuelConsumptionRate>
				<fuelCapacity>99999</fuelCapacity>
				<fuelConsumptionCondition>FlyingOrDrafted</fuelConsumptionCondition>
			</li>
			<li Class="Vehicles.CompProperties_VehicleLauncher">
				<skyfallerLeaving>SparrowLeaving</skyfallerLeaving>
				<skyfallerIncoming>SparrowIncoming</skyfallerIncoming>
				<skyfallerCrashing>SparrowCrashing</skyfallerCrashing>
				<skyfallerStrafing>SparrowStrafe</skyfallerStrafing>
				<fuelConsumptionWorldMultiplier>1.5</fuelConsumptionWorldMultiplier>
				<flySpeed>10</flySpeed>
				<strafing>
					<turrets>
						<li>laserTurrets</li>
					</turrets>
				</strafing>
				<launchProtocol Class="Vehicles.VTOLTakeoff">
					<movementType>Decelerate</movementType>
					<motes>
						<li>
							<moteDef>Mote_RocketSmoke_Low</moteDef>
							<angle>0~360</angle>
							<speed>5~8</speed>
							<size>0.35~0.5</size>
						</li>
					</motes>
					<verticalLaunchCurve>
						<points>
							<li>(0, 0)</li>
							<li>(0.1, 0.336)</li>
							<li>(0.2, 0.919)</li>
							<li>(0.3, 1.733)</li>
							<li>(0.4, 2.705)</li>
							<li>(0.5, 3.748)</li>
							<li>(0.6, 4.768)</li>
							<li>(0.7, 5.676)</li>
							<li>(0.8, 6.389)</li>
							<li>(0.9, 6.844)</li>
							<li>(1, 7)</li>
						</points>
					</verticalLaunchCurve>
					<verticalLaunchRotationCurve>
						<points>
							<li>(0, 0)</li>
							<li>(0.75, 0.5)</li>
							<li>(1, -5)</li>
						</points>
					</verticalLaunchRotationCurve>
					<verticalLandingCurve>
						<points>
							<li>(0, 0)</li>
							<li>(0.1, 0.048)</li>
							<li>(0.2, 0.131)</li>
							<li>(0.3, 0.248)</li>
							<li>(0.4, 0.386)</li>
							<li>(0.5, 0.535)</li>
							<li>(0.6, 0.681)</li>
							<li>(0.7, 0.811)</li>
							<li>(0.8, 0.913)</li>
							<li>(0.9, 0.978)</li>
							<li>(1, 1)</li>
						</points>
					</verticalLandingCurve>
					<verticalLandingRotationCurve>
						<points>
							<li>(0, 0)</li>
							<li>(0.1, -1)</li>
							<li>(1, -2)</li>
						</points>
					</verticalLandingRotationCurve>
					<launchProperties Class = "Vehicles.VerticalProtocolProperties">
						<maxTicks>350</maxTicks>
						<ticksVertical>300</ticksVertical>
						<forcedRotation>East</forcedRotation>
						<angleCurve>
							<points>
								<li>(0,90)</li>
								<li>(1,60)</li>
							</points>
						</angleCurve>
						<rotationCurve>
							<points>
								<li>(0,-5)</li>
								<li>(1,-10)</li>
							</points>
						</rotationCurve>
						<zPositionCurve>
							<points>
								<li>(0,0)</li>
								<li>(0.25,0.25)</li>
								<li>1,2</li>
							</points>
						</zPositionCurve>
						<speedCurve>
							<points>
								<li>(0, 0)</li>
								<li>(0.75, 0.1)</li>
								<li>(1, 1.5)</li>
							</points>
						</speedCurve>
					</launchProperties>
					<landingProperties Class = "Vehicles.VerticalProtocolProperties">
						<maxTicks>250</maxTicks>
						<ticksVertical>75</ticksVertical>
						<forcedRotation>East</forcedRotation>
						<angleCurve>
							<points>
								<li>(1,-85)</li>
							</points>
						</angleCurve>
						<rotationCurve>
							<points>
								<li>(0,-2)</li>
								<li>(1,10)</li>
							</points>
						</rotationCurve>
						<zPositionCurve>
							<points>
								<li>(0,0)</li>
								<li>(0.1,0.25)</li>
								<li>(0.5,0.35)</li>
								<li>(0.55,0.4)</li>
							</points>
						</zPositionCurve>
						<speedCurve>
							<points>
								<li>(0,0)</li>
								<li>(0.1,0.25)</li>
								<li>(0.25,0.45)</li>
								<li>(1,0.5)</li>
							</points>
						</speedCurve>
					</landingProperties>
				</launchProtocol>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>