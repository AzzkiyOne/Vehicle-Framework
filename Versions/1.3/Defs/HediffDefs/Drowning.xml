<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<HediffDef>
		<defName>VF_Drowning</defName>
		<label>Water Buildup</label>
		<description>Lack of oxygen from drowning. May damage brain due to lack of oxygen.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<lethalSeverity>1</lethalSeverity>
		<comps>
			<li Class="HediffCompProperties_SelfHeal">
				<!-- Takes 1 full day to tick down from 100% -->
				<healIntervalTicksStanding>60</healIntervalTicksStanding>
				<healAmount>0.00167</healAmount>
			</li>
		</comps>
		<stages>
			<li>
				<label>trivial</label>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.025</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<label>minor</label>
				<partEfficiencyOffset>-0.25</partEfficiencyOffset>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>moderate</label>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
				<painOffset>0.35</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>severe</label>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
				<painOffset>0.5</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<partEfficiencyOffset>-0.9</partEfficiencyOffset>
				<painOffset>0.6</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>