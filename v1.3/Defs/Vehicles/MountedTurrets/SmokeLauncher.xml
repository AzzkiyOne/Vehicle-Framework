<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<Vehicles.VehicleTurretDef ParentName="TurretBase">
		<defName>SmokeLauncherMounted</defName>
		<label>Smoke Launcher</label>
		<weaponType>Static</weaponType>
		<cannonSound>Shot_IncendiaryLauncher</cannonSound>
		<projectile>Bullet_SmokeLauncher</projectile>
		
		<reloadTimer>30</reloadTimer>
		<warmUpTimer>0</warmUpTimer>
		<magazineCapacity>10</magazineCapacity>
		<genericAmmo>true</genericAmmo>
		
		<fireModes>
			<li>
				<shotsPerBurst>5</shotsPerBurst>
				<ticksBetweenShots>3</ticksBetweenShots>
				<ticksBetweenBursts>40</ticksBetweenBursts>
				<spreadRadius>4</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
		</fireModes>

		<matchParentColor>false</matchParentColor>
		
		<gizmoDescription>Launch a barage of smoke canisters capable of creating a smoke screen.</gizmoDescription>
		<gizmoIconScale>1</gizmoIconScale>
		
		<graphicData>
			<texPath>Vehicles/Turrets/ROSY/ROSY</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<drawSize>(0.85, 0.85)</drawSize>
		</graphicData>

		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
		
		<projectileOffset>0.35</projectileOffset>
		<hitFlags>IntendedTarget</hitFlags>
		<maxRange>20</maxRange>
	</Vehicles.VehicleTurretDef>
</Defs>