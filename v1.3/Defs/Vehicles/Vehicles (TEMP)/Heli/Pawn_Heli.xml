<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleDef ParentName="BaseVehiclePawnUpgradeable">
		<defName>Helicopter</defName>
		<label>Helicopter</label>
		<description>An agile fighter plane capable of recon and offensive operations.</description>
		
		<uiIconScale>0.9</uiIconScale>
		<graphicData>
			<texPath>Vehicles/TEMP/Helicopter/Helicopter</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<drawSize>(8,8)</drawSize>
			<drawOffset>(0, 0, 0.25)</drawOffset>
			<shaderType>CutoutComplexPattern</shaderType>
			<color>(75, 75, 75)</color>
		</graphicData>
		
		<combatPower>2000</combatPower>
		<fillPercent>1</fillPercent>
		
		<nameable>true</nameable>
		<buildDef>Helicopter_Blueprint</buildDef>
		<repairRate>650</repairRate>
		
		<armor>15</armor>
		<cargoCapacity>250</cargoCapacity>
		<speed>0.5</speed>
		<canCaravan>false</canCaravan>
		
		<size>(2,5)</size>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Combat</vehicleCategory>
		<vehicleTech>Industrial</vehicleTech>
		<vehicleType>Air</vehicleType>
				
		<statBases>
			<Mass>25000</Mass>
			<ArmorRating_Blunt>1.0</ArmorRating_Blunt>
			<ArmorRating_Sharp>1.0</ArmorRating_Sharp>
			<MarketValue>250000</MarketValue>
			<Flammability>0</Flammability>
		</statBases>
		
		<drawProperties>
			<upgradeUICoord>(600, 100)</upgradeUICoord>
			<upgradeUISize>(230, 230)</upgradeUISize>
			
			<colorPickerUICoord>(20, 40)</colorPickerUICoord>
			<colorPickerUISize>(230, 230)</colorPickerUISize>
			
			<settingsUICoord>(0, 25)</settingsUICoord>
			<settingsUISize>(145, 145)</settingsUISize>
			
			<graphicOverlays>
				<li>
					<texPath>Vehicles/TEMP/Helicopter/HelicopterRotor</texPath>
					<graphicClass>Vehicles.Graphic_Propeller</graphicClass>
					<drawSize>(8,8)</drawSize>
					<drawOffset>(0, 0, 0.25)</drawOffset>
					<shaderType>Cutout</shaderType>
				</li>
			</graphicOverlays>
		</drawProperties>
		<properties>
			<healthLabel_Healthy>Operational</healthLabel_Healthy>
			<healthLabel_Injured>Needs Repairs</healthLabel_Injured>
			<healthLabel_Immobile>Inoperable</healthLabel_Immobile>
			
			<customBiomeCosts>
				<li>
					<key>AridShrubland</key>
					<value>5</value>
				</li>
			</customBiomeCosts>
			
			<roles>
				<li>
					<key>commander</key>
					<label>Commander</label>
					<handlingTypes>
						<li>Movement</li>
					</handlingTypes>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
				</li>
			</roles>
			
			<customTerrainCosts DisallowTerrainWithTag="Water">
				<li>
					<key>Mud</key>
					<value>-1</value>
				</li>
			</customTerrainCosts>
		</properties>
		
		<components>
			<li>
				<key>Hull</key>
				<label>Hull</label>
				<health>150</health>
				<armor>1.65</armor>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
				
				<categories>
					<li>StatCategoryCargo</li>
				</categories>
			</li>
		</components>
		
		<race>
			<thinkTreeMain>Vehicle</thinkTreeMain>
			<intelligence>ToolUser</intelligence>
			<fleshType>MetalVehicle</fleshType>
			<needsRest>false</needsRest>
			<hasGenders>false</hasGenders>
			<foodType>None</foodType>

			<baseBodySize>1.0</baseBodySize>
			<baseHealthScale>1.0</baseHealthScale>
			<lifeStageAges>
				<li>
					<def>MechanoidFullyFormed</def>
					<minAge>0</minAge>
					<soundWounded>BulletImpact_Metal</soundWounded>
					<soundDeath>Explosion_Bomb</soundDeath>
				</li>
			</lifeStageAges>
			
			<soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeMiss>
		</race>

		<comps>	
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType> <!-- Must Include -->
				<fuelConsumptionRate>200</fuelConsumptionRate>
				<fuelCapacity>400</fuelCapacity>
				<fuelConsumptionCondition>FlyingOrDrafted</fuelConsumptionCondition>
			</li>
			<li Class="Vehicles.CompProperties_VehicleLauncher">
				<skyfallerLeaving>HelicopterLeaving</skyfallerLeaving>
				<skyfallerIncoming>HelicopterIncoming</skyfallerIncoming>
				<skyfallerCrashing>HelicopterCrashing</skyfallerCrashing>
				<skyfallerStrafing>HelicopterStrafe</skyfallerStrafing>
				<fuelEfficiencyWorld>0.1</fuelEfficiencyWorld>
				<flySpeed>10</flySpeed>
				<strafing>
					<turrets>
						<li>laserTurrets</li>
					</turrets>
				</strafing>
				<launchProtocol Class="Vehicles.PropellerTakeoff">
					<angle>85</angle>
					<accelerationRate>0.75</accelerationRate>
					<rotationalAcceleration>
						<min>0</min>
						<max>250</max>
					</rotationalAcceleration>
					<movementType>Decelerate</movementType>
						<ticksVertical>300</ticksVertical>
						<motes>
							<li>
								<moteDef>Mote_RocketSmoke_Low</moteDef>
								<angle>0~360</angle>
								<speed>5~8</speed>
								<size>0.35~0.5</size>
							</li>
						</motes>
						<verticalLaunchCurve>
							<points>
								<li>(0, 0)</li>
								<li>(0.1, 0.25)</li>
								<li>(0.25, 1)</li>
								<li>(0.4, 2)</li>
								<li>(0.5, 3)</li>
								<li>(0.7, 5)</li>
								<li>(0.9, 7)</li>
								<li>(0.95, 7.45)</li>
								<li>(1, 7.75)</li>
							</points>
						</verticalLaunchCurve>
						<verticalLaunchRotationCurve>
							<points>
								<li>(0, 0)</li>
								<li>(0.25, 3)</li>
								<li>(0.75, -3)</li>
								<li>(1, -5)</li>
							</points>
						</verticalLaunchRotationCurve>
						<verticalLandingCurve>
							<points>
								<li>(0, 0)</li>
								<li>(0.1, 0.25)</li>
								<li>(0.25, 1)</li>
								<li>(0.4, 2)</li>
								<li>(0.5, 3)</li>
								<li>(0.7, 5)</li>
								<li>(0.9, 7)</li>
								<li>(0.95, 7.45)</li>
								<li>(1, 7.75)</li>
							</points>
						</verticalLandingCurve>
						<verticalLandingRotationCurve>
							<points>
								<li>(0, 0)</li>
								<li>(0.65, -5)</li>
								<li>(1, 12)</li>
							</points>
						</verticalLandingRotationCurve>
						<launchProperties>
							<maxTicks>500</maxTicks>
							<forcedRotation>East</forcedRotation>
							<rotationCurve>
								<points>
									<li>(0,-5)</li>
									<li>(0.025,-7)</li>
									<li>(0.2,-15)</li>
									<li>(1,-30)</li>
								</points>
							</rotationCurve>
							<zPositionCurve>
								<points>
									<li>(0,0)</li>
									<li>(0.1,0.25)</li>
									<li>(0.5,0.35)</li>
									<li>(0.55,0.4)</li>
								</points>
							</zPositionCurve>
							<speedCurve>
								<points>
									<li>(0, 0)</li>
									<li>(0.3, 0.02)</li>
									<li>(0.65, 0.1)</li>
									<li>(1, 0.15)</li>
								</points>
							</speedCurve>
						</launchProperties>
						<landingProperties>
							<maxTicks>500</maxTicks>
							<forcedRotation>East</forcedRotation>
							<angleCurve>
								<points>
									<li>(1,-85)</li>
								</points>
							</angleCurve>
							<rotationCurve>
								<points>
									<li>(0.1,12)</li>
									<li>(0.3,15)</li>
									<li>(0.5,-10)</li>
									<li>(0.9,-15)</li>
									<li>(1,-5)</li>
								</points>
							</rotationCurve>
							<zPositionCurve>
								<points>
									<li>(0,0)</li>
									<li>(0.1,0.25)</li>
									<li>(0.5,0.35)</li>
									<li>(0.55,0.4)</li>
								</points>
							</zPositionCurve>
							<speedCurve>
								<points>
									<li>(0,1.25)</li>
									<li>(0.8,1)</li>
									<li>(0.9,0.5)</li>
									<li>(0.95,0.1)</li>
								</points>
							</speedCurve>
						</landingProperties>
				</launchProtocol>
			</li>
			<li Class="Vehicles.CompProperties_UpgradeTree">
				<upgrades/>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>